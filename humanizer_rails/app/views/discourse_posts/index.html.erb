<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">üí¨ Discourse Integration</h1>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
            Manage posts published to Discourse platform
          </p>
        </div>
        
        <div class="flex space-x-3">
          <%= link_to "Test Connection", connection_test_discourse_posts_path,
              class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md transition-colors" %>
          <%= link_to "Create Post", new_discourse_post_path,
              class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md transition-colors" %>
          <%= link_to "Sync All", sync_all_discourse_posts_path, method: :post,
              class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-md transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Search & Filter</h2>
      
      <form class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
          <input type="text" name="search" value="<%= params[:search] %>" 
                 placeholder="Search titles, content..."
                 class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <select name="status" class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            <option value="">All Statuses</option>
            <option value="draft" <%= 'selected' if params[:status] == 'draft' %>>Draft</option>
            <option value="publishing" <%= 'selected' if params[:status] == 'publishing' %>>Publishing</option>
            <option value="published" <%= 'selected' if params[:status] == 'published' %>>Published</option>
            <option value="failed" <%= 'selected' if params[:status] == 'failed' %>>Failed</option>
            <option value="updated" <%= 'selected' if params[:status] == 'updated' %>>Updated</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Category</label>
          <input type="text" name="category" value="<%= params[:category] %>" 
                 placeholder="Discourse category"
                 class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Source</label>
          <select name="source_type" class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            <option value="">All Sources</option>
            <option value="conversation" <%= 'selected' if params[:source_type] == 'conversation' %>>Conversation</option>
            <option value="writebook" <%= 'selected' if params[:source_type] == 'writebook' %>>WriteBook</option>
            <option value="manual" <%= 'selected' if params[:source_type] == 'manual' %>>Manual</option>
          </select>
        </div>
        
        <div class="flex items-end">
          <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
            Search
          </button>
        </div>
      </form>
    </div>

    <!-- Posts Grid -->
    <% if @discourse_posts.any? %>
      <div class="space-y-4">
        <% @discourse_posts.each do |post| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                      <%= link_to post.title, discourse_post_path(post), 
                          class: "hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors" %>
                    </h3>
                    
                    <!-- Status Badge -->
                    <% case post.status %>
                    <% when 'published' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                        Published
                      </span>
                    <% when 'draft' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                        Draft
                      </span>
                    <% when 'publishing' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                        Publishing...
                      </span>
                    <% when 'failed' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                        Failed
                      </span>
                    <% when 'updated' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                        Updated
                      </span>
                    <% end %>
                  </div>
                  
                  <!-- Source Info -->
                  <div class="flex items-center space-x-4 text-sm text-gray-600 dark:text-gray-400 mb-3">
                    <% if post.conversation.present? %>
                      <span class="inline-flex items-center">
                        üìö From: <%= link_to post.conversation.title, conversation_path(post.conversation), 
                            class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
                      </span>
                    <% elsif post.writebook.present? %>
                      <span class="inline-flex items-center">
                        üìñ From: <%= link_to post.writebook.title, writebook_path(post.writebook), 
                            class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
                      </span>
                    <% else %>
                      <span class="inline-flex items-center">‚úçÔ∏è Manual Post</span>
                    <% end %>
                    
                    <% if post.discourse_category.present? %>
                      <span>Category: <%= post.discourse_category %></span>
                    <% end %>
                    
                    <% if post.published_at.present? %>
                      <span>Published <%= time_ago_in_words(post.published_at) %> ago</span>
                    <% else %>
                      <span>Created <%= time_ago_in_words(post.created_at) %> ago</span>
                    <% end %>
                  </div>
                  
                  <!-- Content Preview -->
                  <div class="text-sm text-gray-700 dark:text-gray-300 mb-4">
                    <%= truncate(strip_tags(post.content), length: 200) %>
                  </div>
                  
                  <!-- Tags -->
                  <% if post.discourse_tags.present? && post.discourse_tags.any? %>
                    <div class="flex flex-wrap gap-2 mb-4">
                      <% post.discourse_tags.each do |tag| %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                          <%= tag %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                
                <!-- Engagement Stats -->
                <% if post.published? %>
                  <div class="ml-6 text-right">
                    <div class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                      <div>üëÅÔ∏è <%= post.view_count %> views</div>
                      <div>üí¨ <%= post.reply_count %> replies</div>
                      <div>‚ù§Ô∏è <%= post.like_count %> likes</div>
                      <div class="text-xs">Score: <%= post.performance_metrics[:engagement_score].round(1) %></div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex items-center justify-between">
                <div class="flex space-x-2">
                  <%= link_to "View", discourse_post_path(post),
                      class: "px-3 py-1 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-md transition-colors" %>
                      
                  <% if post.draft? %>
                    <%= link_to "Publish", publish_discourse_post_path(post), method: :post,
                        class: "px-3 py-1 bg-green-100 hover:bg-green-200 dark:bg-green-900 dark:hover:bg-green-800 text-green-700 dark:text-green-300 text-sm font-medium rounded-md transition-colors" %>
                  <% elsif post.published? %>
                    <%= link_to "Sync", sync_discourse_post_path(post), method: :post,
                        class: "px-3 py-1 bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-md transition-colors" %>
                  <% end %>
                  
                  <%= link_to "Preview", preview_discourse_post_path(post),
                      class: "px-3 py-1 bg-purple-100 hover:bg-purple-200 dark:bg-purple-900 dark:hover:bg-purple-800 text-purple-700 dark:text-purple-300 text-sm font-medium rounded-md transition-colors" %>
                </div>
                
                <!-- Discourse Link -->
                <% if post.discourse_url.present? %>
                  <%= link_to "View on Discourse ‚Üí", post.discourse_url, target: "_blank",
                      class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 text-sm font-medium" %>
                <% end %>
              </div>
              
              <!-- Error Message -->
              <% if post.error_message.present? %>
                <div class="mt-4 p-3 bg-red-100 dark:bg-red-900 border border-red-200 dark:border-red-800 rounded-md">
                  <div class="text-sm text-red-700 dark:text-red-300">
                    <strong>Error:</strong> <%= post.error_message %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @pagination[:pages] > 1 %>
        <div class="mt-8 flex justify-center">
          <nav class="flex items-center space-x-2">
            <% if @pagination[:page] > 1 %>
              <%= link_to "Previous", discourse_posts_path(params.permit!.merge(page: @pagination[:page] - 1)),
                  class: "px-3 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" %>
            <% end %>
            
            <% (1..@pagination[:pages]).each do |page| %>
              <% if page == @pagination[:page] %>
                <span class="px-3 py-2 text-sm bg-indigo-600 text-white rounded-md"><%= page %></span>
              <% else %>
                <%= link_to page, discourse_posts_path(params.permit!.merge(page: page)),
                    class: "px-3 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md" %>
              <% end %>
            <% end %>
            
            <% if @pagination[:page] < @pagination[:pages] %>
              <%= link_to "Next", discourse_posts_path(params.permit!.merge(page: @pagination[:page] + 1)),
                  class: "px-3 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" %>
            <% end %>
          </nav>
        </div>
      <% end %>
      
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="w-24 h-24 mx-auto mb-4 text-gray-400 dark:text-gray-600">
          üí¨
        </div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Discourse Posts Found</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          <% if params.values.any?(&:present?) %>
            No posts match your current search criteria. Try adjusting your filters.
          <% else %>
            Start sharing your content with the Discourse community.
          <% end %>
        </p>
        
        <div class="flex justify-center space-x-3">
          <%= link_to "Create Post", new_discourse_post_path,
              class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md transition-colors" %>
          <%= link_to "Browse Conversations", conversations_path,
              class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-md transition-colors" %>
          <%= link_to "Browse Books", writebooks_path,
              class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-md transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>