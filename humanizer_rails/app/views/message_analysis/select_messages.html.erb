<div class="message-analysis-interface">
  <!-- Header Section -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6 transition-colors">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
          🔍 Message Analysis
          <span class="ml-3 text-lg font-normal text-gray-600 dark:text-gray-400">
            <%= @conversation.title %>
          </span>
        </h1>
        <p class="text-gray-600 dark:text-gray-300 mt-2">
          Select messages to analyze, summarize, or characterize
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to conversation_path(@conversation), class: "border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors" do %>
          ← Back to Conversation
        <% end %>
      </div>
    </div>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-3">
        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400"><%= @user_messages.count %></div>
        <div class="text-sm text-blue-800 dark:text-blue-300">User Messages</div>
      </div>
      <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-3">
        <div class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @assistant_messages.count %></div>
        <div class="text-sm text-green-800 dark:text-green-300">Assistant Messages</div>
      </div>
      <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-lg p-3">
        <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @system_messages.count %></div>
        <div class="text-sm text-yellow-800 dark:text-yellow-300">System Messages</div>
      </div>
      <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-3">
        <div class="text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @tool_messages.count %></div>
        <div class="text-sm text-purple-800 dark:text-purple-300">Tool Messages</div>
      </div>
    </div>
  </div>

  <!-- Selection Controls -->
  <%= form_with url: summarize_message_analysis_index_path, method: :post, local: true, id: "message-selection-form", class: "space-y-6" do |form| %>
    <%= hidden_field_tag :conversation_id, @conversation.id %>
    
    <!-- Quick Selection Options -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">📋 Quick Selection</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
        <button type="button" onclick="selectByRole('user')" 
                class="selection-btn bg-blue-100 hover:bg-blue-200 dark:bg-blue-900/40 dark:hover:bg-blue-900/60 text-blue-800 dark:text-blue-200 px-4 py-2 rounded-lg transition-colors">
          👤 All User Messages
        </button>
        <button type="button" onclick="selectByRole('assistant')" 
                class="selection-btn bg-green-100 hover:bg-green-200 dark:bg-green-900/40 dark:hover:bg-green-900/60 text-green-800 dark:text-green-200 px-4 py-2 rounded-lg transition-colors">
          🤖 All Assistant Messages
        </button>
        <button type="button" onclick="selectAll()" 
                class="selection-btn bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 px-4 py-2 rounded-lg transition-colors">
          ✅ Select All
        </button>
        <button type="button" onclick="clearSelection()" 
                class="selection-btn bg-red-100 hover:bg-red-200 dark:bg-red-900/40 dark:hover:bg-red-900/60 text-red-800 dark:text-red-200 px-4 py-2 rounded-lg transition-colors">
          ❌ Clear Selection
        </button>
      </div>
      
      <!-- Filter Options -->
      <div class="flex flex-wrap gap-4 text-sm">
        <label class="flex items-center">
          <%= check_box_tag :exclude_system, 'true', false, class: "mr-2 text-purple-600 focus:ring-purple-500" %>
          <span class="text-gray-700 dark:text-gray-300">Exclude system messages</span>
        </label>
        <label class="flex items-center">
          <%= check_box_tag :exclude_tools, 'true', false, class: "mr-2 text-purple-600 focus:ring-purple-500" %>
          <span class="text-gray-700 dark:text-gray-300">Exclude tool messages</span>
        </label>
      </div>
    </div>

    <!-- Custom GPT Groups (if any) -->
    <% if @gpt_groups.any? { |gizmo_id, gpt| gizmo_id.present? } %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">🎯 Custom GPT Messages</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @gpt_groups.each do |gizmo_id, gpt| %>
            <% next unless gizmo_id.present? %>
            <% messages_for_gpt = @assistant_messages.select { |m| m.gizmo_id == gizmo_id } %>
            
            <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-4 hover:border-purple-300 dark:hover:border-purple-600 transition-colors">
              <div class="flex items-center justify-between mb-2">
                <h3 class="font-medium text-gray-900 dark:text-white">
                  <%= gpt&.display_name || "Custom GPT (#{gizmo_id})" %>
                </h3>
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  <%= messages_for_gpt.count %> messages
                </span>
              </div>
              
              <% if gpt&.description.present? %>
                <p class="text-xs text-gray-600 dark:text-gray-400 mb-3">
                  <%= truncate(gpt.description, length: 100) %>
                </p>
              <% end %>
              
              <button type="button" 
                      onclick="selectByGizmo('<%= gizmo_id %>')"
                      class="w-full text-sm bg-purple-100 hover:bg-purple-200 dark:bg-purple-900/40 dark:hover:bg-purple-900/60 text-purple-800 dark:text-purple-200 px-3 py-2 rounded transition-colors">
                Select These Messages
              </button>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Message List -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md transition-colors">
      <div class="p-6 border-b border-gray-200 dark:border-gray-600">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">💬 Individual Messages</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
          Click to select/deselect individual messages
        </p>
      </div>
      
      <div class="max-h-96 overflow-y-auto">
        <% @messages.each_with_index do |message, index| %>
          <div class="message-item border-b border-gray-100 dark:border-gray-700 last:border-b-0 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700/50"
               data-role="<%= message.role %>" 
               data-gizmo-id="<%= message.gizmo_id %>">
            
            <label class="flex items-start p-4 cursor-pointer">
              <input type="checkbox" 
                     name="message_ids[]" 
                     value="<%= message.id %>"
                     class="message-checkbox mt-1 mr-3 text-purple-600 focus:ring-purple-500 rounded">
              
              <div class="flex-1 min-w-0">
                <!-- Message Header -->
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center space-x-2">
                    <span class="role-badge role-<%= message.role %> px-2 py-1 text-xs rounded-full">
                      <%= message.role == 'user' ? '👤' : message.role == 'assistant' ? '🤖' : message.role == 'system' ? '⚙️' : '🛠️' %>
                      <%= message.assistant_display_name %>
                    </span>
                    
                    <% if message.from_custom_gpt? %>
                      <span class="text-xs bg-purple-100 dark:bg-purple-900/40 text-purple-800 dark:text-purple-200 px-2 py-1 rounded">
                        Custom GPT
                      </span>
                    <% end %>
                    
                    <% if message.has_media? %>
                      <span class="text-xs bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-200 px-2 py-1 rounded">
                        📎 Media
                      </span>
                    <% end %>
                  </div>
                  
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    #<%= index + 1 %> • <%= message.word_count %> words
                    <% if message.original_timestamp %>
                      • <%= message.original_timestamp.strftime("%H:%M") %>
                    <% end %>
                  </div>
                </div>
                
                <!-- Message Content Preview -->
                <div class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
                  <%= truncate(message.content, length: 200) %>
                </div>
              </div>
            </label>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Analysis Options -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">🎯 Analysis Options</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Summary Type
          </label>
          <%= select_tag :summary_type, 
                         options_for_select([
                           ['Comprehensive Overview', 'comprehensive'],
                           ['Key Points Only', 'key_points'],
                           ['Topic Analysis', 'topics'],
                           ['Conversation Flow', 'flow'],
                           ['Technical Details', 'technical']
                         ], 'comprehensive'),
                         class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Focus Area (Optional)
          </label>
          <%= text_field_tag :focus_area, '', 
                             placeholder: "e.g., security, performance, user experience",
                             class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-center space-x-4">
      <%= submit_tag "🔍 Analyze Selected Messages", 
                     class: "bg-purple-600 text-white px-8 py-3 rounded-lg hover:bg-purple-700 transition-colors text-lg font-medium",
                     id: "analyze-button" %>
      
      <%= link_to "Cancel", conversation_path(@conversation),
                  class: "border border-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-50 transition-colors" %>
    </div>
  <% end %>
</div>

<!-- Selection Counter -->
<div id="selection-counter" class="fixed bottom-4 right-4 bg-purple-600 text-white px-4 py-2 rounded-lg shadow-lg transition-all transform translate-y-20 opacity-0">
  <span id="selection-count">0</span> messages selected
</div>

<style>
.role-user {
  @apply bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-200;
}

.role-assistant {
  @apply bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-200;
}

.role-system {
  @apply bg-yellow-100 text-yellow-800 dark:bg-yellow-900/40 dark:text-yellow-200;
}

.role-tool {
  @apply bg-purple-100 text-purple-800 dark:bg-purple-900/40 dark:text-purple-200;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('message-selection-form');
  const checkboxes = form.querySelectorAll('.message-checkbox');
  const selectionCounter = document.getElementById('selection-counter');
  const selectionCount = document.getElementById('selection-count');
  const analyzeButton = document.getElementById('analyze-button');
  
  function updateSelectionCounter() {
    const selectedCount = form.querySelectorAll('.message-checkbox:checked').length;
    selectionCount.textContent = selectedCount;
    
    if (selectedCount > 0) {
      selectionCounter.classList.remove('translate-y-20', 'opacity-0');
      selectionCounter.classList.add('translate-y-0', 'opacity-100');
      analyzeButton.disabled = false;
      analyzeButton.classList.remove('opacity-50', 'cursor-not-allowed');
    } else {
      selectionCounter.classList.add('translate-y-20', 'opacity-0');
      selectionCounter.classList.remove('translate-y-0', 'opacity-100');
      analyzeButton.disabled = true;
      analyzeButton.classList.add('opacity-50', 'cursor-not-allowed');
    }
  }
  
  // Update counter on checkbox change
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateSelectionCounter);
  });
  
  // Initial state
  updateSelectionCounter();
});

function selectByRole(role) {
  const checkboxes = document.querySelectorAll(`.message-item[data-role="${role}"] .message-checkbox`);
  checkboxes.forEach(checkbox => {
    checkbox.checked = true;
  });
  updateSelectionCounter();
}

function selectByGizmo(gizmoId) {
  const checkboxes = document.querySelectorAll(`.message-item[data-gizmo-id="${gizmoId}"] .message-checkbox`);
  checkboxes.forEach(checkbox => {
    checkbox.checked = true;
  });
  updateSelectionCounter();
}

function selectAll() {
  const checkboxes = document.querySelectorAll('.message-checkbox');
  checkboxes.forEach(checkbox => {
    checkbox.checked = true;
  });
  updateSelectionCounter();
}

function clearSelection() {
  const checkboxes = document.querySelectorAll('.message-checkbox');
  checkboxes.forEach(checkbox => {
    checkbox.checked = false;
  });
  updateSelectionCounter();
}

function updateSelectionCounter() {
  const form = document.getElementById('message-selection-form');
  const selectionCounter = document.getElementById('selection-counter');
  const selectionCount = document.getElementById('selection-count');
  const analyzeButton = document.getElementById('analyze-button');
  
  const selectedCount = form.querySelectorAll('.message-checkbox:checked').length;
  selectionCount.textContent = selectedCount;
  
  if (selectedCount > 0) {
    selectionCounter.classList.remove('translate-y-20', 'opacity-0');
    selectionCounter.classList.add('translate-y-0', 'opacity-100');
    analyzeButton.disabled = false;
    analyzeButton.classList.remove('opacity-50', 'cursor-not-allowed');
  } else {
    selectionCounter.classList.add('translate-y-20', 'opacity-0');
    selectionCounter.classList.remove('translate-y-0', 'opacity-100');
    analyzeButton.disabled = true;
    analyzeButton.classList.add('opacity-50', 'cursor-not-allowed');
  }
}
</script>
